<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragementMenu.ProfileFragment">


    <TextView
        android:id="@+id/modifier_vo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:alpha="0.8"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="50dp"
        android:text="@string/modifier_vo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/photo" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="User name" />


        <Button
            android:id="@+id/contact"
            android:layout_width="234dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/corner_rose"
            android:textColor="@color/white"
            android:text="Contact via Admin"
            app:backgroundTint="@color/green_" />
        <Button
            android:id="@+id/update_password"
            android:layout_width="234dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_rose"
            android:textColor="@color/white"
            android:text="RÃ©intialiser le mot de passe"
            app:backgroundTint="@color/black" />
        <Button
            android:id="@+id/block_user"
            android:layout_width="234dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_rose"
            android:textColor="@color/white"
            android:text="Bannir utilisateur"
            app:backgroundTint="@color/red" />
    </LinearLayout>


</LinearLayout>