<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="60dp"

    android:background="@color/white"
     >

    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/gg_menu_rig"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/gg_menu_righ"
            />
        <TextView
            android:id="@+id/accueil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto_bold"

            android:text="@string/accueil"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/green_"  />

        <TextView
            android:id="@+id/actualit_s"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"

            android:text="ActualitÃ©s"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/contact"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            />



        <ImageView
            android:id="@+id/eva_plus_sq"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/eva_plus_sq"
            />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:tint="@color/gray"
            android:background="@drawable/search_icon"
            />
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:tint="@color/gray"
            android:background="@drawable/user"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_tab"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <ImageView
             android:layout_width="25dp"
            android:layout_margin="5dp"
            android:layout_height="25dp"
            android:tint="@color/gray"
            android:background="@drawable/search_icon"
            />
        <EditText
            android:id="@+id/search_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="29dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:tint="@color/gray"
            android:background="@drawable/close"
            />

    </LinearLayout>
</LinearLayout>